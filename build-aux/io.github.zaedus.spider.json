{
  "id": "io.github.zaedus.spider",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "spider",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUST_BACKTRACE": "1",
      "RUST_LOG": "spider=debug"
    }
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "cleanup": [
        "*"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "tag": "v0.12.0"
        }
      ]
    },
    {
      "name": "spider",
      "builddir": true,
      "buildsystem": "meson",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/spider/cargo"
        }
      },
      "config-opts": [ "-Dflatpak=true" ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/Zaedus/spider.git",
          "commit": "v0.0.1"
        },
        "generated-sources.json"
      ]
    }
  ]
}
