<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.zaedus.spider</id>
  <name>Spider</name>
  <summary>Install web apps</summary>
  <developer id="io.github.zaedus">
    <name>Zaedus</name>
    <url>https://github.com/Zaedus</url>
  </developer>
  <icon type="stock">io.github.zaedus.spider</icon>
  <icon type="remote">
    https://raw.githubusercontent.com/Zaedus/spider/master/data/icons/hicolor/scalable/apps/io.github.zaedus.spider.svg
</icon>
  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0-only</project_license>
  <content_rating type="oars-1.1" />
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>
  <branding>
    <color type="primary" scheme_preference="light">#c084fc</color>
    <color type="primary" scheme_preference="dark">#6b21a8</color>
  </branding>
  <description>
    <p>
      Spider is a program designed to make installing and using web apps simple
      and powerful
      while integrating with the GNOME desktop.
    </p>
    <ul>
      <li><em>Sandboxed:</em> Each web app is completely isolated</li>
      <li>
        <em>Adaptive Window Styling:</em> Each app's titlebar adapts to it's
        theme color</li>
      <li>
        <em>High quality icons:</em> Scrapes websites for a high quality icons
        to use</li>
    </ul>
  </description>
  <url type="homepage">https://github.com/Zaedus/spider</url>
  <categories>
    <category>Network</category>
    <category>WebBrowser</category>
  </categories>
  <launchable type="desktop-id">io.github.zaedus.spider.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>
        https://raw.githubusercontent.com/Zaedus/spider/refs/heads/assets/screenshots/screenshot-01.png
      </image>
      <caption>Spider main window</caption>
    </screenshot>
    <screenshot>
      <image>
        https://raw.githubusercontent.com/Zaedus/spider/refs/heads/assets/screenshots/screenshot-02.png
      </image>
      <caption>Spider web app window on Github</caption>
    </screenshot>
  </screenshots>
  <releases>
