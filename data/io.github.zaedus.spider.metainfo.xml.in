    <release version="0.0.2" date="2024-09-03">
      <description>
        <ul>
          <li>Fixed adaptivity</li>
          <li>Fixed links not opening</li>
        </ul>
      </description>
      <url>https://github.com/Zaedus/spider/releases/tag/v0.0.2</url>
    </release>
    <release version="0.0.1" date="2024-08-15" />
